@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}
<div class="page-header">
    <h3 class="page-title"> @ViewBag.v1 </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@ViewBag.v4">@ViewBag.v2</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.v3</li>
        </ol>
    </nav>
</div>
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">            
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>   
                            <th> # </th>                            
                            <th> Adı ve Soyadı </th>
                            <th> Şirket - Pozisyon </th>
                            <th> Yorum </th>
                            <th> Sil </th>
                            <th> Detayları Gör </th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>                            
                                <td>
                                    <img src="@x.ImageUrl" alt="image" />                                    
                                </td>
                                <td> @x.ClientName </td>
                                <td> @x.Company </td>
                                <td>@(string.IsNullOrEmpty(x.Comment) ? x.Comment : (x.Comment.Length <= 20 ? x.Comment : x.Comment.Substring(0, 20) + "..."))</td>                                
                                <td><a href="/Testimonial/DeleteTestimonial/@x.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Testimonial/UpdateTestimonial/@x.TestimonialId" class="btn btn-outline-info">Detayı Gör</a></td>                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Testimonial/AddTestimonial" class="btn btn-outline-info">Yeni Referans Ekle</a>

<script src="/corona-free-dark-bootstrap-admin-template-master/template/assets/vendors/js/vendor.bundle.base.js"></script>

