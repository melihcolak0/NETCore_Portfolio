@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}
<div class="page-header">
    <h3 class="page-title"> @ViewBag.v1 </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@ViewBag.v4">@ViewBag.v2</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.v3</li>
        </ol>
    </nav>
</div>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("UpdateTestimonial", "Testimonial", FormMethod.Post, new { @class = "form-group" }))
            {
                <div class="form-group">
                    @Html.Label("Id")
                    @Html.TextBoxFor(x => x.TestimonialId, new { @class = "form-control", @readonly = "readonly", style = "background-color: #7d827d;" })
                </div>
                <div class="form-group">
                    @Html.Label("Adı ve Soyadı")
                    @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control", onfocus = "this.style.color='#a3b3a2'", onblur = "this.style.color='white'" })
                </div>
                <div class="form-group">
                    @Html.Label("Şirket - Pozisyon")
                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control", onfocus = "this.style.color='#a3b3a2'", onblur = "this.style.color='white'" })
                </div>
                <div class="form-group">
                    @Html.Label("Resim")
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", onfocus = "this.style.color='#a3b3a2'", onblur = "this.style.color='white'" })
                </div>
                <div class="form-group">
                    @Html.Label("Yorum")
                    @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", style = "height: 150px;", onfocus = "this.style.color='#a3b3a2'", onblur = "this.style.color='white'" })
                </div>
                <button class="btn btn-primary">Güncelle</button>
            }
        </div>
    </div>
</div>

