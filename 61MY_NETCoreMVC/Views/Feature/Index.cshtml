
@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}
<div class="page-header">
    <h3 class="page-title"> @ViewBag.v1 </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@ViewBag.v4">@ViewBag.v2</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.v3</li>
        </ol>
    </nav>
</div>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Index", "Feature", FormMethod.Post, new { @class = "form-group" }))
            {
                <div class="form-group">
                    @Html.Label("Id")
                    @Html.TextBoxFor(x => x.FeatureId, new { @class = "form-control", @readonly = "readonly", style = "background-color: #7d827d;" })
                </div>
                <div class="form-group">
                    @Html.Label("Başlık")
                    @Html.TextBoxFor(x => x.Header, new { @class = "form-control", onfocus = "this.style.color='#a3b3a2'", onblur = "this.style.color='white'" })
                </div>
                <div class="form-group">
                    @Html.Label("Ad ve Soyad")
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", onfocus = "this.style.color='#a3b3a2'", onblur = "this.style.color='white'" })
                </div>
                <div class="form-group">
                    @Html.Label("Ünvan")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", onfocus = "this.style.color='#a3b3a2'", onblur = "this.style.color='white'" })
                </div>
                <button class="btn btn-primary">Kaydet</button>
            }
        </div>
    </div>
</div>

<script src="/corona-free-dark-bootstrap-admin-template-master/template/assets/vendors/js/vendor.bundle.base.js"></script>


