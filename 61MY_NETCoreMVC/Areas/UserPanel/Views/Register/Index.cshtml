@model _61MY_NETCoreMVC.Areas.UserPanel.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Bir hesabınız yok mu?</h4>
                            <h6 class="font-weight-light">Anında birkaç adımla kaydolun.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="Adınız">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Surname" placeholder="Soyadınız">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="ImageUrl" placeholder="Görsel URL">
                                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Username" placeholder="Kullanıcı Adınız">
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Mail" placeholder="E-Mail Adresiniz">
                                    <span class="text-danger" asp-validation-for="Mail"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="Password" placeholder="Şifreniz">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="ConfirmPassword" placeholder="Şifreniz Tekrar">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>                                  
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="mt-3">                                    
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">KAYIT OL</button>
                                </div>                                
                                <div class="text-center mt-4 font-weight-light">
                                    Bir hesabınız var mı? <a href="/UserPanel/LogIn/Index" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>            
        </div>        
    </div>    
    <script src="/skydash/vendors/js/vendor.bundle.base.js"></script>
    
    <script src="/skydash/js/off-canvas.js"></script>
    <script src="/skydash/js/hoverable-collapse.js"></script>
    <script src="/skydash/js/template.js"></script>
    <script src="/skydash./js/settings.js"></script>
    <script src="/skydash./js/todolist.js"></script>    
</body>
</html>